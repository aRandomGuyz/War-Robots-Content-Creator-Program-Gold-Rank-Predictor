<script>

let tooltipPinned = false;
let tooltipTimer;

document.addEventListener("mousemove", (e) => {
  const tooltip = document.getElementById("tooltip");
  if (!tooltipPinned && tooltip.style.display === "block") {
    tooltip.style.top = e.clientY + 15 + "px";
    tooltip.style.left = e.clientX + 15 + "px";
  }
});

document.addEventListener("mouseover", (e) => {
  if (e.target.classList.contains("tooltip-word")) {
    tooltipTimer = setTimeout(() => { showTooltip(e); }, 500);
  }
});

document.addEventListener("mouseout", (e) => {
  if (e.target.classList.contains("tooltip-word")) {
    clearTimeout(tooltipTimer);
    if (!tooltipPinned) hideTooltip();
  }
});

document.addEventListener("click", (e) => {
  if (!e.target.classList.contains("tooltip-word") && tooltipPinned) {
    tooltipPinned = false;
    hideTooltip();
  }
});

function showTooltip(e) {
  const tooltip = document.getElementById("tooltip");
  tooltip.style.display = "block";
  tooltip.style.top = e.clientY + 15 + "px";
  tooltip.style.left = e.clientX + 15 + "px";
}

function hideTooltip() {
  document.getElementById("tooltip").style.display = "none";
}

function pinTooltip(e) {
  tooltipPinned = true;
  showTooltip(e);
}

// About panel
function toggleAbout() {
  const panel = document.getElementById("aboutPanel");
  const btn = document.getElementById("toggleAboutBtn");

  if (panel.style.display === "none") {
    panel.style.display = "block";
    btn.textContent = "‚ùå Hide About The Creator";
  } else {
    panel.style.display = "none";
    btn.textContent = "‚ÑπÔ∏è About The Creator";
  }
}

// Tenure selection
let tenure = 0;
function setTenure(value) {
  tenure = value;
  document.querySelectorAll('.tenure-options button')
    .forEach(b => b.classList.remove('active'));
  document.querySelectorAll('.tenure-options button')[value - 1]
    .classList.add('active');
}

// MAIN PREDICTOR
function predict() {

let goldWindow = "Future review";

  const eliteBoost = document.getElementById("eliteBoost").checked;

  // Input validation
  if (
    videos.value === "" ||
    views.value === "" ||
    prevVideos.value === "" ||
    prevViews.value === ""
  ) {
    result.innerHTML = "‚ö†Ô∏è Please enter all current and previous period stats.";
    return;
  }

  if (tenure === 0) {
    result.innerHTML = "‚ö†Ô∏è Please select your time in the Creator Program.";
    return;
  }

  const v  = Number(videos.value);
  const vw = Number(views.value);
  const pv = Number(prevVideos.value);
  const pvw= Number(prevViews.value);

  // Day-phase logic
  const today = new Date();
  const day = today.getDate();
  let periodPhase = "normal";
  if (day <= 5) periodPhase = "fresh";
  else if (day <= 10) periodPhase = "mid";

  // Base score
  let score = 0;
  if (v >= pv) score += 2;
  if (vw >= pvw) score += 3;
  if (v >= 10) score += 2;
  if (vw >= 700) score += 3;

  let tenureModifier = 1;
  if (tenure === 1) tenureModifier = 0.85;
  if (tenure === 3) tenureModifier = 1.1;
  score = Math.round(score * tenureModifier);

  // ===== PERIOD RESET EARLY MONTH =====
  if (periodPhase !== "normal") {

    let trendText = (periodPhase === "fresh")
      ? "üîÑ New period just started ‚Äî low stats are normal"
      : "‚è≥ Early month ‚Äî activity should be resuming";

    let text, prob, window;

    if (pv >= 20) {
      text = "üü¢ Strong last period momentum";
      prob = "65‚Äì85%";
      goldWindow = "Promotion possible this cycle";
    }
    else if (pv >= 12) {
      text = "üü° Decent last period activity";
      prob = "50‚Äì70%";
      goldWindow = "Needs early uploads";
    }
    else {
      text = "‚ö†Ô∏è Weak last period activity";
      prob = "30‚Äì50%";
      goldWindow  = "Strong restart needed";
    }

    result.innerHTML = `
      <strong>${text}</strong><br>
      (${prob})<br><br>
      ‚è≥ <strong>Estimated Gold Window:</strong><br>
      ${window}<br><br>
      <div class="trend">${trendText}</div>
      <div class="trend">üìä Last Period Videos: ${pv}</div>`;
    return;
  }

  // ===== NEW TREND MODEL =====

  const uploadMomentum = pv > 0 ? (v - pv) / pv : 0;
  const viewMomentum   = pvw > 0 ? (vw - pvw) / pvw : 0;

  const currVPV = v > 0 ? vw / v : 0;
  const prevVPV = pv > 0 ? pvw / pv : 0;
  const efficiencyMomentum = prevVPV > 0 ? (currVPV - prevVPV) / prevVPV : 0;

  let momentumScore = 0;

  if (uploadMomentum > 0.15) momentumScore += 1;
  if (viewMomentum > 0.15) momentumScore += 2;
  if (efficiencyMomentum > 0.10) momentumScore += 1;

  if (uploadMomentum < -0.25) momentumScore -= 1;
  if (viewMomentum < -0.25) momentumScore -= 2;
  if (efficiencyMomentum < -0.20) momentumScore -= 1;

  let trendText;
  if (momentumScore >= 3) trendText = "üìà Trend: Accelerating growth";
  else if (momentumScore >= 1) trendText = "üü¢ Trend: Stable upward momentum";
  else if (momentumScore <= -3) trendText = "üìâ Trend: Sharp decline risk";
  else if (momentumScore <= -1) trendText = "üü° Trend: Slight slowdown";
  else trendText = "‚ûñ Trend: Stable equilibrium";

// ===== STABILITY FLAGS =====
const stableUploads = v >= 8;
const stableViews = vw >= 600;
const notDeclining = !trendText.includes("Decline") && !trendText.includes("decline");

  if (score >= 9 && notDeclining) {
    if (tenure === 1) {
      goldWindow = "Likely promoted after 1 additional review cycle";
    }
    else if (tenure === 2) {
      goldWindow = `Likely promoted at <span class="tooltip-word" onclick="pinTooltip(event)">period boundary</span>`;
    }
    else {
      goldWindow = `Very likely promotion at next <span class="tooltip-word" onclick="pinTooltip(event)">period boundary</span>`;
    }
  }
  else if (score >= 8 && stableViews && notDeclining) {
    goldWindow = "Promotion possible within next 1‚Äì2 cycles";
  }
  else if (score >= 7) {
    goldWindow = "Needs stability before promotion";
  }

// ===== FINAL RESULT TEXT =====

let text = "‚ö†Ô∏è Staying Silver for now";
let prob = "40%";

// Elite boost override
if (eliteBoost && notDeclining && tenure >= 2) {
  text = "üöÄ Extremely strong Gold candidate";
  prob = "85‚Äì95%";
  goldWindow = `Very likely next <span class="tooltip-word" onclick="pinTooltip(event)">period boundary</span>`;
}
else if (score >= 10) {
  if (tenure === 1) { text = "‚ö†Ô∏è Strong stats, but new Silver"; prob = "60‚Äì75%"; }
  else if (tenure === 2) { text = "‚úÖ Good chance of reaching Gold"; prob = "70‚Äì85%"; }
  else { text = "‚úÖ Strong chance of reaching Gold"; prob = "75‚Äì90%"; }
}
else if (score >= 7) {
  if (tenure === 1) { text = "üü° Promising start"; prob = "45‚Äì60%"; }
  else { text = "üü° Possible, needs consistency"; prob = "55‚Äì70%"; }
}

  result.innerHTML = `
    <strong>${text}</strong><br>
    (${prob})<br><br>
    ‚è≥ <strong>Estimated Gold Window:</strong><br>
    ${goldWindow}<br><br>
    <div class="trend">${trendText}</div>
    <div class="trend">üìä Evaluation Score: ${score}/13</div>`;
}

</script>

